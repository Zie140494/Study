<Window x:Class="PeripheralDevices.RepairForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeripheralDevices"
        mc:Ignorable="d"
        Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Наименование</Label>
        <Label Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">Сотрудник</Label>
        <Label Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">Статус</Label>
        <Label Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">Дата ремонта</Label>
        <TextBox x:Name="NameTb" Grid.Column="1" Margin="10" ></TextBox>
        <TextBox x:Name="EmployeeTb" Grid.Column="1" Grid.Row="1" Margin="10"></TextBox>
        <TextBox x:Name="StatusTb" Grid.Column="1" Grid.Row="2" Margin="10"></TextBox>
        <TextBox x:Name="DateTb" Grid.Column="1" Grid.Row="3" Margin="10"></TextBox>
        <Button Grid.Row="4" Margin="10" Click="OK_Click">OK</Button>
        <Button Grid.Column="1" Grid.Row="4" Margin="10" Click="Cancel_Click">Отмена</Button>
    </Grid>
</Window>
